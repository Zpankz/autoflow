# Medical Knowledge Graph Environment Configuration
# Copy this to .env and customize for your medical deployment

# Enhanced KG Features
ENABLE_ENHANCED_KG=true
KG_ENTITY_DISTANCE_THRESHOLD=0.85
ENTITY_CACHE_SIZE=2000

# Medical Domain Configuration
KG_MEDICAL_DOMAIN=true
MEDICAL_ABBREVIATIONS_PRESERVE=true
MEDICAL_DOMAIN_FOCUS=critical_care

# Parallel Processing for Medical Literature
PARALLEL_KG_PROCESSING=true
MAX_KG_WORKERS=8
CHUNK_TIMEOUT_SECONDS=45

# Medical Knowledge Quality Settings
MIN_RELATIONSHIP_CONFIDENCE=0.4
MAX_EDGES_PER_ENTITY=75
MEDICAL_RELATIONSHIP_WEIGHTING=true

# Database Configuration (TiDB Cloud for medical data)
TIDB_HOST=gateway01.your-region.prod.aws.tidbcloud.com
TIDB_PORT=4000
TIDB_USER=your-medical-username
TIDB_PASSWORD=your-secure-password
TIDB_DATABASE=medical_knowledge_graph
TIDB_SSL=true

# OpenAI Configuration for Medical Processing
OPENAI_API_KEY=sk-your-openai-api-key
MEDICAL_MODEL_PREFERENCE=gpt-4-turbo

# Medical Knowledge Sources
MEDICAL_CORPUS_PATH=./core/examples/medical_fixtures/
MEDICAL_GUIDELINES_ENABLED=true
PHARMACOLOGY_FOCUS=vasopressor_therapy

# Monitoring and Logging
LOG_LEVEL=INFO
MEDICAL_AUDIT_LOGGING=true
PERFORMANCE_MONITORING=true

# Security for Medical Data
MEDICAL_DATA_ENCRYPTION=true
HIPAA_COMPLIANCE_MODE=false  # Set to true for production medical deployments
PHI_PROTECTION_ENABLED=false  # Enable for protected health information

# Development vs Production
ENVIRONMENT=development
DEBUG=false
MEDICAL_DEMO_MODE=true

# Container Resource Allocation
WEB_CONCURRENCY=6
CELERY_CONCURRENCY=8
REDIS_MAX_MEMORY=512mb

# Medical Knowledge Graph Specific
MEDICAL_ENTITY_TYPES_ENABLED=drug,receptor,pathway,condition,procedure,biomarker
PHARMACOLOGY_RELATIONSHIP_TYPES=therapeutic_effect,contraindication,drug_interaction,mechanism
CRITICAL_CARE_PROTOCOLS_ENABLED=true
