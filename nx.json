{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "installation": {
    "version": "21.4.0",
    "plugins": {
      "@nx/js": "21.4.0",
      "@nx/workspace": "21.4.0",
      "@nx/devkit": "21.4.0"
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": ["default", "!{projectRoot}/**/*.spec.{js,ts}", "!{projectRoot}/tsconfig.spec.json"],
    "sharedGlobals": ["{workspaceRoot}/.github/**/*"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "outputs": ["{projectRoot}/dist", "{projectRoot}/build"],
      "cache": true
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"],
      "cache": true
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"],
      "cache": true
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false
    }
  },
  "projects": {
    "tidb-ai-parent": "frontend",
    "backend": "backend", 
    "core": "core",
    "example-docs": "docs",
    "tidb.ai-playwright": "e2e"
  },
  "defaultBase": "main"
}