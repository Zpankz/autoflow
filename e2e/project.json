{
  "name": "tidb.ai-playwright",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "e2e",
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx playwright test",
        "cwd": "e2e"
      },
      "dependsOn": ["^build"],
      "inputs": ["default", "^production"],
      "cache": true
    },
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npx playwright install",
        "cwd": "e2e"
      },
      "cache": false
    }
  },
  "tags": ["type:e2e-test", "lang:typescript", "framework:playwright"],
  "implicitDependencies": ["tidb-ai-parent", "backend", "example-docs"]
}
